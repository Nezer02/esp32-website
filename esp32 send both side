#include <WiFi.h>
#include <WebSocketsClient.h>
#include <ArduinoJson.h>

const char* ssid = "BANM_Hostel";
const char* password = "W1f1St4#nT8";
const char* ws_server = "websocket-js-production-f89e.up.railway.app";
const int ws_port = 443;
const char* robot_name = "robot1";  // ESP32 Ã¼Ã§Ã¼n robotun adÄ±

WebSocketsClient webSocket;
bool isConnected = false;
unsigned long lastSentTime = 0;  // Sonuncu gÃ¶ndÉ™rmÉ™ vaxtÄ±
const long sendInterval = 5000;  // 5 saniyÉ™dÉ™n bir mÉ™lumat gÃ¶ndÉ™r

void registerRobot() {
    DynamicJsonDocument doc(256);
    doc["type"] = "register";
    doc["robotName"] = robot_name;

    String jsonStr;
    serializeJson(doc, jsonStr);
    webSocket.sendTXT(jsonStr);

    Serial.println("ðŸ“¡ Robot qeydiyyat mesajÄ± gÃ¶ndÉ™rildi!");
}

// Sensor mÉ™lumatlarÄ±nÄ± serverÉ™ gÃ¶ndÉ™rÉ™n funksiya
void sendSensorData() {
    if (!isConnected) return;

    DynamicJsonDocument doc(256);
    doc["type"] = "sensorData";
    doc["robotName"] = robot_name;

    // "data" obyektini yarat vÉ™ iÃ§indÉ™ temperatur vÉ™ mÉ™safÉ™ dÉ™yÉ™rlÉ™rini saxla
    JsonObject data = doc.createNestedObject("data");
    data["temperature"] = random(20, 30);  // Burada hÉ™qiqi sensor mÉ™lumatlarÄ± ola bilÉ™r
    data["distance"] = random(50, 150);    // MÉ™safÉ™ Ã¼Ã§Ã¼n test dÉ™yÉ™rlÉ™ri

    String jsonStr;
    serializeJson(doc, jsonStr);
    webSocket.sendTXT(jsonStr);

    Serial.println("ðŸ“¤ Sensor mÉ™lumatlarÄ± serverÉ™ gÃ¶ndÉ™rildi: " + jsonStr);
}

// WebSocket hadisÉ™lÉ™rini idarÉ™ edÉ™n funksiya
void onWebSocketEvent(WStype_t type, uint8_t *payload, size_t length) {
    switch (type) {
        case WStype_CONNECTED:
            Serial.println("âœ… WebSocket QoÅŸuldu!");
            isConnected = true;
            registerRobot();  // QoÅŸulduqdan sonra robotu qeydiyyata al
            break;

        case WStype_TEXT: {
            String message = (char*)payload;
            Serial.print("ðŸ“© Yeni mesaj alÄ±ndÄ±: ");
            Serial.println(message);

            // JSON mesajÄ± emal et
            DynamicJsonDocument doc(256);
            DeserializationError error = deserializeJson(doc, message);
            if (error) {
                Serial.print("âŒ JSON xÉ™tasÄ±: ");
                Serial.println(error.c_str());
                return;
            }

            if (doc["type"] == "command") {
                const char* command = doc["command"];
                Serial.print("âž¡ Robot Ã¼Ã§Ã¼n komanda: ");
                Serial.println(command);
                // Burada mÃ¼hÉ™rriklÉ™ri idarÉ™ etmÉ™k Ã¼Ã§Ã¼n kod É™lavÉ™ et
            }
            break;
        }

        case WStype_DISCONNECTED:
            Serial.println("âŒ WebSocket BaÄŸlantÄ±sÄ± KÉ™sildi! YenidÉ™n qoÅŸulmaÄŸa Ã§alÄ±ÅŸÄ±lÄ±r...");
            isConnected = false;
            break;
    }
}

void setup() {
    Serial.begin(115200);
    WiFi.begin(ssid, password);
    Serial.print("ðŸ”„ WiFi qoÅŸulur...");
    
    while (WiFi.status() != WL_CONNECTED) {
        delay(1000);
        Serial.print(".");
    }
    Serial.println("\nâœ… WiFi QoÅŸuldu!");

    webSocket.beginSSL(ws_server, ws_port, "/");  // SSL ilÉ™ baÄŸlantÄ±
    webSocket.onEvent(onWebSocketEvent);
    webSocket.setReconnectInterval(5000);  // 5 saniyÉ™dÉ™n bir yenidÉ™n qoÅŸulmaÄŸa Ã§alÄ±ÅŸ
}

void loop() {
    webSocket.loop();

    // HÉ™r 5 saniyÉ™dÉ™n bir serverÉ™ sensor mÉ™lumatlarÄ± gÃ¶ndÉ™r
    if (millis() - lastSentTime >= sendInterval) {
        sendSensorData();
        lastSentTime = millis();
    }
}
